@model TruckSys.Entities.Truck

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Criar Novo Caminhão</title>
</head>
<body>

    <h4>Truck</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Modelo" class="control-label"></label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnoFabricacao" class="control-label"></label>
                    <input asp-for="AnoFabricacao" class="form-control" />
                    <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnoModelo" class="control-label"></label>
                    <input asp-for="AnoModelo" class="form-control" />
                    <span asp-validation-for="AnoModelo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Gravar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar à lista</a>
    </div>
    <div id="ErrorMessages">
        @foreach (var item in Model.errormessages)
        {
            <p style="color:red;">
                @Html.DisplayFor(modelItem => item)
            </p>
        }
    </div>


</body>
</html>
